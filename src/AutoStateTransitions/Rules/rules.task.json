{
  "type": "Task",
  "rules": [
    {
      "ifChildState": "Active",
      "notParentStates": [ "Active", "Resolved" ],
      "setParentStateTo": "Active",
      "allChildren": false
    },
        {
      "ifChildState": "In Progress",
      "notParentStates": [ "In Progress", "Resolved" ],
      "setParentStateTo": "In Progress",
      "allChildren": false
    },
    {
      "ifChildState": "New",
      "notParentStates": [ "Active", "Resolved", "New" ],
      "setParentStateTo": "Active",
      "allChildren": false
    },
    {
      "ifChildState": "Closed",
      "notParentStates": [],
      "setParentStateTo": "Closed",
      "allChildren": true
    }
  ]
}
